<Window x:Class="Trix_UPD.Copy_File_Link"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trix_UPD"
        mc:Ignorable="d"
        Title="Скопировать файл из Интернета" Height="150" Width="800" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
    <TextBox Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" Text="https://github.com" BorderBrush="#66323030" ToolTip="Введите ссылку" Name="Name"/>
    <Label VerticalAlignment="Center" Content="Ссылка на сайт"/>
    <Button Content="Импортировать" Grid.ColumnSpan="2" Grid.Row="1" ToolTip="Перед нажатием проверьте все настройки" BorderBrush="#FF545F63" Background="#FFD35144" Foreground="White" Click="Create_Click"/>
    </Grid>
</Window>
